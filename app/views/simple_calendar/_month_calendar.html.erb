<div class="simple-calendar">
  <div class="calendar-heading columns mt1 ">
    <%= link_to t('simple_calendar.previous', default: 'Previous'), calendar.url_for_previous_view, class: "button is-dark column is-1 ml3" %>
    <span class="title column  has-text-centered"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></span>
    <%= link_to t('simple_calendar.next', default: 'Next'), calendar.url_for_next_view , class: "button is-dark column is-1 is-pulled-right mr3 "  %>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
 
               <span class = "text is-small is grey-darker"></span> <%  passed_block.call day.strftime("%d"), sorted_events.fetch(day, []) %></span>
              <% end %>
            <% end %>
   
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
